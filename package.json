{
  "name": "dale-cli",
  "version": "0.1.0",
  "private": true,
  "description": "One CLI to rule them all! A bunch of daily commands to help the development of our projects.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-glima/dale-cli.git"
  },
  "bin": {
    "dale": "./bin/run"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "main": "lib/src/index.js",
  "oclif": {
    "commands": "./lib/src/commands",
    "bin": "dale",
    "plugins": [
      "@oclif/plugin-not-found",
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./lib/src/hooks/init/logo"
    }
  },
  "types": "lib/src/index.d.ts",
  "dependencies": {
    "@oclif/command": "^1.5.18",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.1",
    "@oclif/plugin-not-found": "^1.2.3",
    "globby": "^10.0.1",
    "tslib": "^1.10.0",
    "yo": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@oclif/dev-cli": "^1.22.2",
    "@oclif/tslint": "^3.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/chai": "^4.2.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "chalk": "^2.4.2",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "mock-stdin": "^0.3.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "husky": "^3.0.1",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "semantic-release": "^19.0.3",
    "typescript": "~3.7.2"
  },
  "lint-staged": {
    "*.ts": "prettier --write && npx tslint -p . -t stylish"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "scripts": {
    "build": "rm -rf lib && tsc -b",
    "format": "npx prettier --write \"{src,test}/**/*.ts\"",
    "lint": "npx tslint -p . -t stylish",
    "check": "npm run format && npm run lint",
    "test": "npx jest",
    "test:integration": "npx jest test/commands/*",
    "test:unit": "npx jest test/config/* test/utils/*",
    "release": "semantic-release",
    "release:local": "semantic-release --no-ci --dry-run"
  }
}
